<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10" style="-fx-padding: 20;" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kursinis.prif4kursinis.fxControllers.regLog.RegistrationController">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="10" prefWidth="100" />
        <ColumnConstraints hgrow="ALWAYS" minWidth="10" prefWidth="100" />
    </columnConstraints>
    <Label style="-fx-font-size: 27;" text="REGISTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <GridPane.halignment>
            <HPos fx:constant="CENTER" />
        </GridPane.halignment>
        <GridPane.valignment>
            <VPos fx:constant="CENTER" />
        </GridPane.valignment>
    </Label>
    <!-- Row 0 -->
    <Label text="Enter username" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="loginField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <!-- Row 1 -->
    <Label text="Enter password" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <!-- Row 2 -->
    <Label text="Repeat password" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <PasswordField fx:id="repeatPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <!-- Row 3 -->
    <Label text="Enter name" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <!-- Row 4 -->
    <Label text="Enter surname" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="surnameField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <!-- Row for Address -->
    <Label text="Enter address" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <!-- Row for Card Number -->
    <Label text="Enter card number" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <TextField fx:id="cardNumberField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <!-- Buttons Row -->
    <Button onAction="#createUser" text="Create User" GridPane.columnIndex="1" GridPane.rowIndex="10">
        <GridPane.halignment>
            <HPos fx:constant="RIGHT" />
        </GridPane.halignment>
    </Button>
    <Button onAction="#returnToLogin" text="Return" GridPane.columnIndex="0" GridPane.rowIndex="10" />



    <!-- Buttons -->
