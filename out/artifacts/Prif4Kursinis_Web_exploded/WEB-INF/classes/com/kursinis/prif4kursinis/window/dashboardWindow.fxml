<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kursinis.prif4kursinis.fxControllers.windowControllers.DashboardWindowController">

    <Label layoutX="401.0" layoutY="27.0" style="-fx-font-size: 25;" text="DASHBOARD">
    </Label>

    <!-- Textual Statistics -->
    <VBox layoutX="32.0" layoutY="117.0" spacing="10">
        <Label fx:id="totalSalesLabel" text="Total Sales: [data]" />
        <Label fx:id="totalRevenueLabel" text="Total Revenue: [data]" />
        <Label fx:id="numberOfOrdersLabel" text="Number of Orders: [data]" />
        <!-- More statistics as needed -->
    </VBox>

    <!-- Graphical Representation -->
    <BarChart fx:id="salesBarChart" barGap="5.0" layoutX="212.0" layoutY="106.0" legendVisible="false" prefHeight="300.0" prefWidth="672.0">
        <xAxis>
            <CategoryAxis label="Date" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Total Sales" />
        </yAxis>
    </BarChart>

    <!-- Other UI components as needed -->

</AnchorPane>
