<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" prefHeight="400.0" prefWidth="325.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kursinis.prif4kursinis.fxControllers.regLog.LoginController" style="-fx-padding: 20;">
   <Label text="LOGIN" style="-fx-font-size: 27;" />
   <TextField fx:id="loginField" prefWidth="200" promptText="Username" />
   <PasswordField fx:id="passwordField" prefWidth="200" promptText="Password" />
   <HBox spacing="10">
      <Button onAction="#validateAndConnect" text="Login" />
      <Button onAction="#registerNewUser" text="Register" />
   </HBox>
   <Hyperlink fx:id="forgotPasswordLink" onAction="#handleForgotPassword" text="Forgot Password?" />
   <Label fx:id="errorMessageLabel" textFill="red" />
</VBox>
