<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="130.0" prefWidth="494.0" style="-fx-background-color: #333333; -fx-background-radius: 10; -fx-border-color: #555555; -fx-border-radius: 10;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kursinis.prif4kursinis.fxControllers.windowControllers.ProductNodeController">
    <children>
        <!-- Image View for Product Picture -->
        <ImageView fx:id="productImageView" fitHeight="110.0" fitWidth="110.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" />

        <!-- Product Information -->
        <VBox layoutX="130.0" layoutY="10.0" spacing="5">
            <Label fx:id="productNameLabel" style="-fx-font-weight: bold; -fx-font-size: 16;" text="Product name" textFill="WHITE" />
            <Label fx:id="productCodeLabel" style="-fx-font-size: 14;" text="Product code" textFill="WHITE" />
            <Label fx:id="productPriceLabel" style="-fx-font-size: 14;" text="Price: $xx.xx" textFill="WHITE" />
        </VBox>

        <!-- Action Buttons -->
        <HBox layoutX="130.0" layoutY="100.0" spacing="10">
            <Button fx:id="visibilityButton" onAction="#handleVisibilityAction" style="-fx-font-size: 14; -fx-background-color: transparent;" text="Visible" textFill="WHITE" />
            <Button fx:id="editButton" onAction="#handleEditAction" style="-fx-font-size: 14; -fx-background-color: transparent;" text="Edit" textFill="WHITE" />
            <Button fx:id="deleteButton" onAction="#handleDeleteAction" style="-fx-font-size: 14; -fx-background-color: transparent;" text="Delete" textFill="WHITE" />
         <Button fx:id="viewButton" layoutX="131.0" layoutY="10.0" onAction="#handleProductView" style="-fx-font-size: 14; -fx-background-color: transparent;" text="View" textFill="WHITE" />
         <padding>
            <Insets bottom="5.0" />
         </padding>
        </HBox>
    </children>
</AnchorPane>
