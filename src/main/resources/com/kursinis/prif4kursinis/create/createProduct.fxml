<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="400.0" spacing="10" style="-fx-background-color: #333333; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kursinis.prif4kursinis.fxControllers.createControllers.CreateProductController">
    <children>
        <Label fx:id="titleLabel" style="-fx-font-size: 20; -fx-font-weight: bold;" text="Create New Product" textFill="WHITE" />
        <TextField fx:id="productNameField" maxWidth="200" promptText="Product Name" />
        <TextField fx:id="productCodeField" maxWidth="200" promptText="Product Code" />
        <TextField fx:id="productPriceField" maxWidth="200" promptText="Price" />
        <TextArea fx:id="productDescriptionField" maxWidth="200" prefHeight="100" promptText="Description" wrapText="true" />
        <HBox prefHeight="25.0" prefWidth="341.0" spacing="10">
            <Button onAction="#chooseImage" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-background-radius: 5;" text="Choose Image" />
            <Label fx:id="imagePathLabel" textFill="WHITE" />
        </HBox>
        <Button fx:id="createProductButton" maxWidth="200" onAction="#createProduct" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Create Product" />
    </children>
</VBox>
